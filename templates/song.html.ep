% my $nav = begin
  <div class="row justify-content-between mb-2">
    % if (defined $previous) {
      <a class="col" href="<%= $previous->{slug} %>">« <%= $previous->{name} %></a>
    % } else {
      <a class="col"></a>
    % }
    % if (defined $next) {
      <a class="col text-right" href="<%= $next->{slug} %>"><%= $next->{name} %> »</a>
    % }
  </div>
% end
%= $nav->()
%== $content
%= $nav->()
