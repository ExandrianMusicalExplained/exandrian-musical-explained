% my $nav = begin
  <div class="row justify-content-between mb-10">
    % if (defined $previous) {
      <a class="col" href="/<%= $previous->{slug} %>.html">« <%= $previous->{name} %></a>
    % } else {
      <a class="col"></a>
    % }
    % if (defined $next) {
      <a class="col text-right" href="/<%= $next->{slug} %>.html"><%= $next->{name} %> »</a>
    % }
  </div>
% end
%= $nav->()
%== $content
%= $nav->()
