% my $nav = begin
  <div class="columns">
    % if (defined $previous) {
      <a class="column col-6" href="<%= $previous->{slug} %>">« <%= $previous->{name} %></a>
    % } else {
      <a class="column col-6"></a>
    % }
    % if (defined $next) {
      <a class="column col-6 text-right" href="<%= $next->{slug} %>"><%= $next->{name} %> »</a>
    % }
  </div>
% end
%= $nav->()
%== $content
%= $nav->()
